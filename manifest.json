{
  "manifest_version": 3,
  "name": "Container Traffic Control",
  "description": "Control which container a website will open up in based on a set of rules.",
  "version": "25.9.5",
  "author": "Kaushik Gopal (https://kau.sh)",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "cookies",
    "contextualIdentities",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "optional_host_permissions": ["<all_urls>"],
  "background": {
    "scripts": [
      "src/utils.js",
      "src/rule-engine.js",
      "src/ctc-repository.js",
      "src/background.js"
    ]
  },
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "ctc@kau.sh",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
